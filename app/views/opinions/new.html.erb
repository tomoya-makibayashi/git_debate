<div class="contents_opinion">
    <div class="opinion_form">
        <div class="new_form_theme_title">
            <div class="label_newform"><%= @theme.title %></div>
        </div>
        <div class="new_form_theme_text"><%= simple_format(@theme.text) %></div>
<%= form_for [@theme,@opinion] do |f| %>
        <div class="opinion_form_field">
            <div class="label">
                <%= f.label :賛成？反対？, class: "opinion_form_label" %>
            </div>
            <div class="opinion_form_area1">
                <%= f.select :foragainst, [["賛成", "賛成"], ["反対", "反対"]], include_blank: "選択してください", class: "opinion_form_foragainst" %>
            </div>
        </div>
        <div class="opinion_form_field">
            <div class="label">
                <%= f.label :主張の根拠, class: "opinion_form_label" %>
            </div>
            <div class="opinion_form_area">
                <%= f.text_area :reason, placeholder: "主張の根拠を記入", class: "opinion_form_textarea" %>
            </div>
        </div>
        <div class="opinion_form_field">
            <div class="label">
                <%= f.label :参考文献など, class: "opinion_form_label" %>
            </div>
            <div class="opinion_form_area">
                <%= f.url_field :url, placeholder: "URLを入力", class: "opinion_form_url" %>
            </div>
            <div class="action_opinion">
                <%= f.submit "投稿する", class: "opinion_form_btn" %>
            </div>
        </div>
    </div>
<% end %>
<% if @opinions.present? %>
<div class="foragainst_field">
    <div class="for_title">
    賛成派
    </div>
    <div class="against_title">
    反対派
    </div>
</div>
        <%= render partial: "conclusions/opinion", collection: @opinions %>
    <% end %>
</div>