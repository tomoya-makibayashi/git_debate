<div class="user_field">
    <div class="theme_user_info_area">
        <div class="user_image">
            <% if @user.image.attached? %>
            <div class="theme_user_image" style="background-image: url(<%= rails_blob_path(@user.image) %>) "></div>
            <% else %>
            <div class="theme_user_image" style="background-image: url(<%= asset_path('image2.001.jpeg') %>) "></div>
            <% end %>
        </div>
        <%= form_for(@user) do |f| %>
        <div class="label_edit_user">
            <%= f.label :アイコン画像, class: "label_edit" %>
        </div>
        <div class="new_form_area">
            <%= f.file_field :image, placeholder: "画像アップロード", class: "edit_user_field" %>
        </div>
        <div class="label_edit_user">
            <%= f.label :自己紹介文, class: "label_edit" %>
        </div>
        <div class="new_form_area">
            <%= f.text_area :text, placeholder: "自己紹介文を編集", class: "edit_user_textarea" %>
        </div>
        <div class="action">
            <%= f.submit "変更する", class: "new_form_btn" %>
        </div>
    <% end %>
    </div>
</div>