<div class="contents_login">
  <div class="contents_field">
  <div class="contents_box">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <div class="label_field">
      <%= f.label :メールアドレス, class: "label" %>
      </div>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "email_field" %>
    </div>
    
    <div class="field">
      <div class="label_field">
      <%= f.label :ニックネーム, class: "label" %>
      </div>
      <%= f.text_field :nickname, autofocus: true, placeholder: "重複しないもの", class: "signup_nickname" %>
    </div>
    
    <div class="field">
      <div class="label_field">
      <%= f.label :自己紹介, class: "label" %>
      </div>
      <%= f.text_area :text, autofocus: true, placeholder: "自己紹介をしてください。", class: "signup_textarea" %>
    </div>

    <div class="field">
      <div class="label_field">
      <%= f.label :パスワード, class: "label" %>
      <% if @minimum_password_length %>
      <span>(<%= @minimum_password_length %> 文字以上)</span>
      <% end %></div>
      <%= f.password_field :password, autocomplete: "new-password", class: "password_field" %>
    </div>

    <div class="field">
      <div class="label_field">
      <%= f.label :パスワードの確認, class: "label" %>
      </div>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "password_field" %>
    </div>
  </div>
    <div class="actions">
      <%= f.submit "新規登録", class: "btn_field" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
</div>