<div class="contents_login">
  <div class="contents_field">
  <div class="contents_box">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <div class="label_field">
      <%= f.label :メールアドレス, class: "label" %>
      </div>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "email_field" %>
    </div>

    <div class="field">
      <div class="label_field">
      <%= f.label :パスワード, class: "label" %>
      </div>
      <%= f.password_field :password, autocomplete: "current-password", class: "password_field" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <div class="label_field_remember">
        <%= f.check_box :remember_me %>
        <span><%= f.label :ユーザー情報を記憶します, class: "remember_me" %></span>
        </div>
    </div>
    <% end %>
  </div>
    <div class="actions">
      <%= f.submit "ログイン", class: "btn_field" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
  </div>
</div>